{
    "extends": "config/tsconfig.json",
    "filesGlob": ["./src/**/*.ts"],
    "exclude": [
        "node_modules",
        "build",
        "**/__tests__/*",
        "jest.setup.tsx",
        "dev",
        "types",
        "dev/examples.framer",
        "test",
        "skins",
        "dist",
        "temp",
        "api",
        "cypress"
    ],
    "compilerOptions": {
        "baseUrl": "src",
        "declarationDir": "types",
        "outDir": "lib",
        "rootDir": "src"
    }
}
