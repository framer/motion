{
    "preset": "ts-jest",
    "rootDir": "src",
    "collectCoverageFrom": [
        "**/*.{js,jsx,ts,tsx}",
        "!**/node_modules/**",
        "!**/__tests__/**"
    ],
    "coverageDirectory": "<rootDir>/../coverage",
    "setupTestFrameworkScriptFile": "<rootDir>/../jest.setup.ts",
    "testMatch": ["**/__tests__/**/*.test.(js|ts)?(x)"],
    "testPathIgnorePatterns": ["ssr.test.tsx"]
}
