{
    "name": "framer-motion",
    "version": "0.19.1",
    "main": "dist/framer-motion.cjs.js",
    "module": "dist/framer-motion.es.js",
    "types": "dist/framer-motion.d.ts",
    "author": "Framer Motion",
    "license": "MIT",
    "scripts": {
        "lint": "yarn eslint src/**/*.ts",
        "test": "yarn test-client && yarn test-server",
        "test-client": "jest --coverage --config jest.config.json --maxWorkers=2",
        "test-server": "jest --config jest.config.ssr.json",
        "watch": "jest --watch --coverage --coverageReporters=lcov  --config jest.config.json",
        "prettier": "prettier ./src/* --write",
        "build": "rollup -c && make api && yarn measure",
        "prepublishOnly": "yarn test && yarn build",
        "measure": "gzip -c dist/framer-motion.js | wc -c",
        "deduplicate": "yarn-deduplicate yarn.lock"
    },
    "peerDependencies": {
        "react": "^16.7",
        "react-dom": "^16.7"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.1.5",
        "@types/jest": "^23.3.9",
        "@types/node": "^10.12.9",
        "@types/react": "^16.7.6",
        "@types/react-dom": "^16.0.9",
        "@types/styled-components": "^4.1.0",
        "@typescript-eslint/eslint-plugin": "^1.5.0",
        "@typescript-eslint/parser": "^1.5.0",
        "cache-loader": "^1.2.5",
        "convert-tsconfig-paths-to-webpack-aliases": "^0.9.2",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^1.6.0",
        "fork-ts-checker-webpack-plugin": "^0.4.15",
        "husky": "1.1.4",
        "jest": "^23.6.0",
        "jest-dom": "^2.1.1",
        "jest-junit": "^5.2.0",
        "lint-staged": "^8.0.4",
        "prettier": "^1.15.2",
        "progress-bar-webpack-plugin": "^1.11.0",
        "react": "16.8",
        "react-dev-utils": "^6.1.1",
        "react-dom": "16.8",
        "react-testing-library": "^5.3.0",
        "rollup": "^0.67.3",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-typescript2": "^0.18.0",
        "rollup-plugin-uglify": "^6.0.0",
        "styled-components": "^4.1.1",
        "ts-jest": "^23.10.4",
        "ts-loader": "^5.3.0",
        "typescript": "3.3",
        "webpack": "^4.25.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "yarn-deduplicate": "^1.1.1"
    },
    "dependencies": {
        "@emotion/is-prop-valid": "^0.7.3",
        "@popmotion/popcorn": "^0.4.0",
        "framesync": "^4.0.2",
        "hey-listen": "^1.0.8",
        "popmotion": "^8.6.9",
        "style-value-types": "^3.1.4",
        "stylefire": "^5.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "linters": {
            "*.{ts,tsx}": [
                "prettier --write",
                "git add"
            ]
        },
        "ignore": [
            "**/api/*.api.ts"
        ]
    }
}
